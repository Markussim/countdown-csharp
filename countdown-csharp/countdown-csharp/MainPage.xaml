<Page
    x:Class="countdown_csharp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:countdown_csharp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,20">
                <TextBox x:Name="timeInput"
                     Header="Enter time:" PlaceholderText="HH:MM"
                     Width="300" HorizontalAlignment="Left" TextChanged="formatText" MaxLength="5"/>
                <TextBlock x:Name="outputBox"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
